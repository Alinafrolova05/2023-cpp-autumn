#include <iostream>
int main() {
	int X;
	std:: cin >> X ;
	if (X == 100) {
		std:: cout << "C";
	}
	if (X / 10 == 1) {
		std:: cout << "X";
	}
	if (X / 10 == 2) {
		std:: cout << "XX";
	}
	if (X / 10 == 3) {
		std:: cout << "XXX";
	}
	if (X / 10 == 4) {
		std:: cout << "XL";
	}
	if (X / 10 == 5) {
		std:: cout << "L";
	}
	if (X / 10 == 6) {
		std:: cout << "LX";
	}
	if (X / 10 == 7) {
		std:: cout << "LXX";
	}
	if (X / 10 == 8) {
		std:: cout << "LXXX";
	}
	if (X / 10 == 9) {
		std:: cout << "XC";
	}
	if (X % 10 == 1) {
		std:: cout << "I";
	}
	if (X % 10 == 2) {
		std:: cout << "II";
	}
	if (X % 10 == 3) {
		std:: cout << "III";
	}
	if (X % 10 == 4) {
		std:: cout << "IV";
	}
	if (X % 10 == 5) {
		std:: cout << "V";
	}
	if (X % 10 == 6) {
		std:: cout << "VI";
	}
	if (X % 10 == 7) {
		std:: cout << "VII";
	}
	if (X % 10 == 8) {
		std:: cout << "VIII";
	}
	if (X % 10 == 9) {
		std:: cout << "IX";
	}

	return EXIT_SUCCESS;
}
